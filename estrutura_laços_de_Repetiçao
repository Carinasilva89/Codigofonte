#include <stdio.h>
#include <stdlib.h>

int main()
{
      int i,idade;
      float media,soma;

      soma=0;
   for (i=0; i<3; i++){

      printf("Digite sua idade:");
      scanf ("%d",&idade);
      soma=soma+idade;
 }
      media=soma/3;
      printf("sua media:%.2f\n",media);

   if ((media >=0)&&(media<=25)){

          printf("JOVEM");}

   else
        if((media>25) && (media<=60)){
          printf("ADULTO");}

   else
        if(media>60){
          printf ("IDOSO");

   }

    return 0;}
